<resources>
	<declare-styleable name="ListBody">
		<!-->Whether or not a horizontal divider should be shown between each list item. Default: false.<-->
		<attr name="showListDividers" format="boolean"/>

		<!-->Whether or not artwork should be shown on each list item. Default: true.<-->
		<attr name="showListArtwork" format="boolean"/>
	</declare-styleable>

	<declare-styleable name="GridBody">
		<!-->The number of columns in the grid. Must be greater than 0. Default: 2.<-->
		<attr name="numberOfColumns" format="integer"/>
	</declare-styleable>

	<declare-styleable name="CoordinatedMixtapeContainer">
		<!-->The material elevation of the header view. Default: 4dp.<-->
		<attr name="headerElevation" format="dimension"/>

		<!-->The material elevation of the body view. Default: 0dp.<-->
		<attr name="bodyElevation" format="dimension"/>

		<!-->The constraint to apply to the header and the body. Default: showHeaderAlways.<-->
		<attr name="headerBodyConstraint" format="enum">
			<enum name="hideHeaderAlways" value="0"/>
			<enum name="showHeaderAlways" value="1"/>
			<enum name="showHeaderAtTopOnly" value="2"/>
			<enum name="showHeaderOnDownwardsScrollOnly" value="3"/>
		</attr>
	</declare-styleable>
</resources>